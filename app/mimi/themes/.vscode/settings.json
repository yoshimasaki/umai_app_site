{
    "json.schemas": [
        {
            "fileMatch": [
                "/Content_index.json"
            ],
            "url": "./schema/Content_index.schema.json"
        },
        {
            "fileMatch": [
                "/Content_sort.json"
            ],
            "url": "./schema/Content_sort.schema.json"
        },
        {
            "fileMatch": [
                "/note/contents/*/Content_index/*.json"
            ],
            "url": "./schema/note/Content.schema.json"
        },
        {
            "fileMatch": [
                "/notebook/contents/*/Content_index/*.json"
            ],
            "url": "./schema/notebook/Content.schema.json"
        }
    ]
}